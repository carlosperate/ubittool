    },
    {
      "name": "Python: tests",
      "type": "python",
      "request": "launch",
      "stopOnEntry": false,
      "python": "${command:python.interpreterPath}",
      "program": "${workspaceFolder}/make.py",
      "args": ["test"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "env": {},
      "envFile": "${workspaceFolder}/.env",
      "debugOptions": [],
      "internalConsoleOptions": "neverOpen"
    }
  ]
}
