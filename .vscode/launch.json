  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Current File",
      "type": "python",
      "request": "launch",
      "stopOnEntry": true,
      "python": "${command:python.interpreterPath}",
      "program": "${file}",
      "cwd": "${workspaceFolder}",
      "env": {},
      "envFile": "${workspaceFolder}/.env",
      "debugOptions": ["RedirectOutput"]
    },
    {
      "name": "Python: Terminal (integrated)",
      "type": "python",
      "request": "launch",
      "stopOnEntry": true,
      "python": "${command:python.interpreterPath}",
      "program": "${file}",
      "cwd": "",
      "console": "integratedTerminal",
      "env": {},
      "envFile": "${workspaceFolder}/.env",
      "debugOptions": [],
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "Python: Terminal (external)",
      "type": "python",
      "request": "launch",
      "stopOnEntry": true,
      "python": "${command:python.interpreterPath}",
      "program": "${file}",
      "cwd": "",
      "console": "externalTerminal",
      "env": {},
      "envFile": "${workspaceFolder}/.env",
      "debugOptions": [],
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "Python: uBit CLI",
      "type": "python",
      "request": "launch",
      "stopOnEntry": false,
      "python": "${command:python.interpreterPath}",
      "program": "${workspaceFolder}/ubittool/cli.py",
      "args": [],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "env": {},
      "envFile": "${workspaceFolder}/.env",
      "debugOptions": [],
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "Python: uBit GUI",
      "type": "python",
      "request": "launch",
      "stopOnEntry": false,
      "python": "${command:python.interpreterPath}",
      "program": "${workspaceFolder}/ubittool/gui.py",
      "args": [],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "env": {},
      "envFile": "${workspaceFolder}/.env",
      "debugOptions": [],
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "Python: uBit CLI module",
      "type": "python",
      "request": "launch",
      "stopOnEntry": false,
      "python": "${command:python.interpreterPath}",
      "module": "ubittool",
      "args": [],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "env": {},
      "envFile": "${workspaceFolder}/.env",
      "debugOptions": [],
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "Python: uBit GUI module",
      "type": "python",
      "request": "launch",
      "stopOnEntry": false,
      "python": "${command:python.interpreterPath}",
      "module": "ubittool",
      "args": ["gui"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "env": {},
      "envFile": "${workspaceFolder}/.env",
      "debugOptions": [],
